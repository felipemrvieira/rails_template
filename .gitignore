# Ignore bundler config
/.bundle

# Ignore all logfiles and temp files
/log/*
/tmp/*

# Ignore environment-specific files
/.env
/.env.*

# Ignore macOS directory attributes
.DS_Store

# Ignore SQLite database
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore public/assets in production
/public/assets

# Ignore yarn packages
/node_modules

# Ignore uploaded files in development
/storage/*

# Ignore webpacker compiled files
/public/packs
/public/packs-test

# Ignore master key for Rails encrypted credentials
/config/master.key

# Ignore the default Rails public/uploads directory
/public/uploads

# Ignore any .byebug_history file
/byebug_history

# Ignore Spring preloader files
/spring/*.pid

# Ignore Webpacker development server file
/server.pid

# Ignore RuboCop and Reek temporary files
/.rubocop-https*
/.reek-https*

# Ignore coverage report directory generated by SimpleCov
/coverage/

# Ignore yarn error log files
/yarn-error.log

# Ignore puma server socket
/tmp/puma.pid
